<p id="notice"><%= notice %></p>

<h3>Listing Bayaran</h3>

<div class="table-wrapper">
<table>
  <thead>
    <tr>
      <th>Tarikh</th>
      <th>Jumlah</th>
      <th>Nota</th>
      <th>Nombor Rumah</th>
      <th>Nama</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bayaran.each do |bayaran| %>
      <tr>
        <td><%= bayaran.tarikh %></td>
        <td><%= bayaran.jumlah %></td>
        <td><%= bayaran.nota %></td>
        <% @rerumah = Rumah.all %>
        <td><%= @rerumah.find(bayaran.rumah_id).nombor unless bayaran.rumah_id.nil? %></td>
        <td><%= @rerumah.find(bayaran.rumah_id).nama unless bayaran.rumah_id.nil? %></td>
        <td ><%= link_to 'Show', bayaran, class: "button special fit small"%></td>
        <td ><%= link_to 'Edit', edit_bayaran_path(bayaran),class: "button special fit small" %></td>
        <td ><%= link_to 'Destroy', bayaran, method: :delete, data: { confirm: 'Are you sure?' },class: "button special fit small" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Bayaran', new_bayaran_path,  class: "button"  %>

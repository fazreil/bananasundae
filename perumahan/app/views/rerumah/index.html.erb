<p id="notice"><%= notice %></p>
<h3 >Listing Rerumah</h3>

<div class="table-wrapper">
<table>
  <thead>
    <tr>
      <th>Nombor</th>
      <th>Sah</th>
      <th>Nama</th>
      <th>Telefon</th>
      <th>Nota</th>
      <th>Taman</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rerumah.each do |rumah| %>
      <tr>
        <td><%= rumah.nombor %></td>
        <td><%= rumah.sah %></td>
        <td><%= rumah.nama %></td>
        <td><%= rumah.telefon %></td>
        <td><%= rumah.nota %></td>
        <% @tetaman = Taman.all %>
        <td><%= @tetaman.find(rumah.taman_id).nama unless rumah.taman_id.nil? %></td>
        <td><%= link_to 'Show', rumah, class: "button special fit small" %></td>
        <td><%= link_to 'Edit', edit_rumah_path(rumah),  class: "button special fit small" %></td>
        <td><%= link_to 'Destroy', rumah, method: :delete, data: { confirm: 'Are you sure?' }, class: "button special fit small" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Rumah', new_rumah_path,  class: "button" %>
